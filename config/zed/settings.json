{
	"features": {
		"edit_prediction_provider": "zed"
	},
	// Theme
	"icon_theme": {
		"mode": "system",
		"light": "JetBrains New UI Icons (Light)",
		"dark": "Catppuccin Macchiato"
	},
	"theme": {
		"mode": "system",
		"light": "Catppuccin Latte",
		"dark": "Catppuccin Macchiato"
	},

	// Buffer
	"buffer_font_family": "Hack Nerd Font",
	"buffer_font_weight": 500,
	"tab_size": 2,
	"ui_font_size": 15,
	"buffer_font_size": 14,

	// Tabs
	"tabs": {
		"file_icons": true
	},
	"tab_bar": {
		"show_nav_history_buttons": false
	},

	// Helix stuff
	"helix_mode": true,
	"relative_line_numbers": true,
	"vertical_scroll_margin": 20,

	"terminal": {
		"dock": "right",
		"env": {
			"EDITOR": "zed --wait",
			"VISUAL": "zed --wait",
			"MANPAGER": "zed --wait +Man!"
		},
		"working_directory": "current_project_directory"
	},

	"languages": {
		"Astro": {
			"language_servers": [
				"astro-language-server",
				"biome",
				"tailwindcss-language-server",
				"!prettier"
			],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"Rust": {
			"tab_size": 4,
			"formatter": "language_server",
			"language_servers": ["rust-analyzer"]
		},
		"Prisma": {
			"formatter": {
				"language_server": {
					"name": "prisma-language-server"
				}
			},
			"language_servers": ["prisma-language-server"]
		},
		"JSON": {
			"language_servers": ["vtsls", "biome", "!prettier", "..."],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"JSONC": {
			"language_servers": ["vtsls", "biome", "!prettier", "..."],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"JavaScript": {
			"language_servers": [
				"vtsls",
				"biome",
				"tailwindcss-language-server",
				"!eslint",
				"!prettier",
				"!typescript-language-server",
				"..."
			],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"TSX": {
			"language_servers": [
				"vtsls",
				"biome",
				"tailwindcss-language-server",
				"!eslint",
				"!prettier",
				"!typescript-language-server",
				"..."
			],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"TypeScript": {
			"inlay_hints": {
				"enabled": true,
				"show_type_hints": false
			},
			"language_servers": [
				"vtsls",
				"biome",
				"tailwindcss-language-server",
				"!eslint",
				"!prettier",
				"!typescript-language-server",
				"..."
			],
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		}
	},

	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"checkOnSave": {
					"enable": true,
					"command": "clippy",
					"extraArgs": ["--", "-W", "clippy::all"]
				},
				"check": {
					"allTargets": true
				}
			}
		}
	},

	"file_types": {
		"JSONC": ["tsconfig*.json"]
	}
}
